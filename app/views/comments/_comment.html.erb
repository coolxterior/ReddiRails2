<%= form_for(@comment) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id, User.all.collect {|u| [ u.name, u.id ] } %>
  </div>
  <div class="field">
    <%= f.label :post_id %><br />
    <%= f.select :post_id, Post.all.collect {|p| [ p.url, p.id ] } %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>