<h1>Users</h1>

  <% if @users.count > 0 %>
	<table>
	  <tr>
		<th style="background-color: #efefef; padding: 5px">Name</th>
		<th style="background-color: #efefef; padding: 5px">Email</th>
		<th></th>
	  </tr>
  
	  <% @users.each do |u| %>
		<tr>
			<td><%= link_to u.name, edit_user_path(u) %></td>
			<td><%= u.email %></td>
			<td><%= link_to 'Destroy', u, :confirm => 'Are you sure?', :method => :delete %></td>
		 </tr>
	  <% end %>
	  
	  </table>
	  <br />
  <% end %>
  
  <% if @users.count == 0 %>
	<p>Could not find any users. Click on link below to create a user.</p>
  <% end %>

<%= link_to 'New User', new_user_path %>