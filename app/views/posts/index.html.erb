Show: <%= link_to 'Users', users_path %> | Posts<hr/>
<h1>Posts</h1>

<% if @posts.count > 0 %>
	<table>
	  <tr>
		<th style="background-color: #efefef; padding: 5px">URL</th>
		<th style="background-color: #efefef; padding: 5px">Submitter</th>
		<th></th>
	  </tr>
  
	  <% @posts.each do |p| %>
		<tr>
			<td><%= link_to p.url, post_path(p) %></td>
			<td><%= p.user.name %></td>
			<td><%= link_to 'Delete', p, :confirm => 'Really delete this post?', :method => :delete %></td>
		 </tr>
	  <% end %>
	  
	  </table>
	  <br />
<% end %>

<% if @posts.count == 0 %>
	<p>Could not find any posts. You can create a new post below.</p>
<% end %>

<%= link_to 'New Post', new_post_path %>